<EditAccountScreenView>
    title: 'Редактировать аккаунт'
    name: 'edit_account'
    auto_dismiss:False
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size_hint:None,None
    size:(350,450)

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols:2
            size_hint_y: .5
            Label:
                text: "[color=c06ef0][/color]"
                markup: True
                font_size: 20

            Image:
                source:'call.png'
#                center_x:self.parent.center_x
#                center_y:self.parent.center_y
#                size:"5sp","5sp"
                size: (5,5)
        GridLayout:
            cols:1
            rows:4
            padding:65,10,0,0
            # имя пациента
            MyField
                id: hadler_name_input
                hint_text: 'Имя '
                on_text: root.set_handler_name(self.text)
                pos_hint: {"center_x": .46}

        # Номер телефона
            MyField:
                id: phone_number_input
                hint_text: 'Номера телефона'
                helper_text: '+375-XX-XXX-XX-XX'
                helper_text_mode: 'on_focus'
                max_text_length: 17
                on_text: root.set_phone_number(self.text)

            #Почта
            MyField:
                id: email_input
                hint_text: 'Электронная почта'
                helper_text:'XXXXXXXXXXX@XXXXXX'
                helper_text_mode: 'on_focus'
                #max_text_length: 10
                on_text: root.set_mail(self.text)

            #Адрес
            MyField:
                hint_text: 'Адрес проживания'
                id: address_input
                on_text: root.set_address(self.text)
                multiline: False
#                pos_hint: {"center_x": .5,"center_y":.5}
        GridLayout:
            cols:2
            rows:1
            padding:25,100,0,0
            spacing:10
            MDFillRoundFlatButton:
                text: 'Изменить профиль'
                on_press: app.root.current = 'main_menu'
                #on_release: root.dismiss()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
#                pos_hint: {"center_x": .5,"center_y":.5}
            MDFillRoundFlatButton:
                text: 'Отменить'
                on_press: app.root.current = 'main_menu'
                #on_release: root.dismiss()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
#                pos_hint: {"center_x": .5,"center_y":.5}
