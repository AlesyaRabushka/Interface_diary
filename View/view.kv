<ExitScreenView>
    title: 'Выход'
    name: 'exit'
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True
#
        GridLayout:
            cols: 2
            rows: 3
            size_hint: 1, 0.3
            spacing:10
            padding:10,0,10,10
            Label:
                text: "[color=c06ef0]Действительно хотите выйти?[/color]"
                markup: True
                font_size: 20
            Button:
                text: 'Нет'
                background_color:'#c06ef0'
                background_normal:''
                on_release: app.root.current = 'main_menu'
            Button:
                text: 'Да'
                background_color:'#c06ef0'
                background_normal:''
                on_release: app.root.current = 'authentification'
