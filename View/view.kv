<RegistrationScreenView>
    title: 'Регистрация'
    name: 'registration'
    auto_dismiss:False
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size_hint:None,None
    size:(400,500)

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True
        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0
           # spacing:10
        # имя пациента
            MyField
                id: pet_name_input
                hint_text: 'ФИО'
                on_text: root.set_full_name(self.text)

                pos_hint: {"center_x": .30}

        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0
           # spacing:10
        # имя пациента
            MyField
                id: pet_name_input
                hint_text: 'Логин'
                max_text_length: 20
                on_text: root.set_login(self.text)

                pos_hint: {"center_x": .30}

        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0

            MyField
                id: pet_name_input
                hint_text: 'Адрес электронной почты'
#                max_text_length: 20
#                helper_text: 'Буквы латинского алфавита и арабские цифры'
                on_text: root.set_email(self.text)

                pos_hint: {"center_x": .30}

        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0

            MyField
                id: pet_name_input
                hint_text: 'Пароль'
                max_text_length: 20
                helper_text: 'Буквы латинского алфавита и арабские цифры'
                on_text: root.set_password(self.text)

                pos_hint: {"center_x": .30}

        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0
            MDFillRoundFlatButton:
                text: 'Зарегистрироваться'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'main_menu'
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}

