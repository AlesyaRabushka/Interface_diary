<MyField@MDTextField>
    size_hint_x: None
    width: '200'
    text_color: "000000"

    required: True
    helper_text: "This field is required"
    helper_text_mode: "on_error"

    color_mode: 'custom'
    line_color_focus: 'c06ef0'

    multiline: False
    background_color: (1, 1, 1)
    background_normal:''


<AccountScreenView>:
    name: 'account'
    title: 'Профиль'
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size: root.width, root.height

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols:2
            rows:8
            spacing: 20
            padding:0,10,0,0
            size_hint_y: None
            height:260
            Label:
                text:"[color=c06ef0]Имя[/color]"
                markup: True
                font_size: 15
#                size_hint_y:None
                height:30
                width:30
        GridLayout:
            cols:2
            rows:1
            spacing: 20
            padding:0,10,0,0
            size_hint_y: None
            MDFillRoundFlatButton:
                text: 'Забыли пароль?'
                #disabled: True if root.everything() else False
#                on_press: Factory.ForgetPasswordScreenView(root.return_system()).open()
                on_press: app.root.current = 'authentification'
        #                on_release: root.dismiss()
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}


<AuthentificationScreenView>
    name: 'authentification'
    title: 'Вход'
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size:root.width, root.height

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0
           # spacing:10
        # имя пациента
            MyField
                id: pet_name_input
                hint_text: 'Логин'
                on_text: root.set_login(self.text)
                pos_hint: {"center_x": .30}

        GridLayout:
            cols:1
            rows:1
            size_hint_y:None
            height:50
            padding:75,0,10,0

            MyField
                id: pet_name_input
                hint_text: 'Пароль'
                on_text: root.set_password(self.text)
                pos_hint: {"center_x": .30}

        GridLayout:
            cols:2
            rows:2
            size_hint_y:None
            height:50
            padding:75,0,10,0
            MDFillRoundFlatButton:
                text: 'Забыли пароль?'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'forget_password'
#                on_release: root.dismiss()
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}

            MDFillRoundFlatButton:
                text: 'Войти'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'main_menu'
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}

            MDFillRoundFlatButton:
                text: 'Зарегестрироваться'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'registration'

                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}


