<MainScreenView>
    title: 'Ежедневник'
    name: 'main_menu'
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True
#
        GridLayout:
            cols: 3
            size_hint: 1, 0.3
            spacing:10
            padding:10,0,10,10
            Button:
                text: 'Профиль'
                background_color:'#c06ef0'
                background_normal:''
                on_release: app.root.current = 'account'
            Button:
                text: 'Заметки'
                background_color:'#c06ef0'
                background_normal:''
                on_release: app.root.current = 'records'
            Button:
                text: 'Прогресс'
                background_color:'#c06ef0'
                background_normal:''
                on_release: app.root.current = 'progress'
            Button:
                text: 'Выход'
                background_color:'#c06ef0'
                background_normal:''
                on_release: app.root.current = 'exit'



