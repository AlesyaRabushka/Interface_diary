<TooltipButton@ToolTip+Button>
    tooltip_bg_color: [192/256,110/256,240/256,1]

<MyField@MDTextField>
    size_hint_x: None
    width: '200'
    text_color: "000000"

    required: True
    helper_text: "This field is required"
    helper_text_mode: "on_error"

    color_mode: 'custom'
    line_color_focus: 'c06ef0'

    multiline: False
    background_color: (1, 1, 1)
    background_normal:''





<AuthentificationScreenView>:
    name: 'authentification'
    title: 'Вход'
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size:root.width, root.height

    BoxLayout:
        # background color
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size



        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            cols:1
            rows:1
            height:50
            padding:75,0,10,0
           # spacing:10
        # имя пациента
            MyField
                id: login
                hint_text: 'Логин'
                max_text_len: 20
                on_text: root.set_login(self.text)
                pos_hint: {"center_x": .30}

        GridLayout:
            cols:2
            rows:1
            height:50
            padding:75,0,10,0

            MyField
                id: password
                hint_text: 'Пароль'
                password: True
                password_mask: '*'
                max_text_len: 20
                on_text: root.set_password(self.text)
                pos_hint: {"center_x": .30}

            TooltipButton:
                tooltip_text: 'показать пароль'
                size_hint:None,None
                size: "40sp", "40sp"
                on_press: root.hide_password()
                background_color:0,0,0,0

                Image:
                    source:'img/eye-off.png'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y
                    size:"40sp","40sp"

        GridLayout:
            cols:2
            rows:2
            height:50
            padding:75,0,10,0
            MDFillRoundFlatButton:
                text: 'Забыли пароль?'
                #disabled: True if root.everything() else False
                on_press:
#                    app.root.transition.direction = 'no_transition'
                    app.root.current = 'forget_password'
#                on_release: root.dismiss()
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}

            MDFillRoundFlatButton:
                text: 'Войти'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'records'
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}

            MDFillRoundFlatButton:
                text: 'Зарегестрироваться'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'registration'

                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}

            MDFillRoundFlatButton:
                text: 'Настройки'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'settings'
#                on_release: root.dismiss()
                #on_press: root.info()
                text_color: 0, 0, 0, 1
                line_color: 1, 0, 1, 1
                pos_hint: {"center_x": .5,"center_y":.5}


