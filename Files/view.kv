                MDRoundFlatButton:
                    text: 'Профиль'
                    background_color:'#c06ef0'
                    background_normal:''
                    on_release: app.root.current = 'account'

                MDRoundFlatButton:
                    text: 'Прогресс'
                    background_color:'#c06ef0'
                    background_normal:''
                    on_release: app.root.current = 'progress'

            GridLayout:
                cols:2
                rows: 1
                padding:50,20,0,0
                Image:
                    source:'img/woom.jpg'
                    size: "40sp", "100sp"

                Label:
                    text:"[color=000000]Marta\nMorrison[/color]"
                    markup: True
                    font_size: 25


        GridLayout:
            cols: 2
            rows:2
            spacing:30
            padding:120,0,0,50
            Label:
                text:"[color=000000]Адрес электронной почты:[/color]"
                markup: True
                font_size: 15
                height:20
                width:30
            Label:
                text: '[color=000000]martamor@gmail.com[/color]'
                markup: True
                font_size: 15
                height:30
                width:30


            GridLayout:
                cols: 2
                rows: 1
                padding:120,0,0,200
                spacing: 50

                MDRoundFlatButton:
                    text: 'Изменить профиль'
                    on_press: app.root.current = 'edit_account'
                MDRoundFlatButton:
                    text: '       Отменить          '
                    on_press: app.root.current = 'records'

            Label:
                text:''


