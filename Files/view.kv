<TooltipButton@ToolTip+Button>
    tooltip_bg_color: [132/256,233/256,250/256,1]

<MyField@MDTextField>
    size_hint_x: None
    width: '200'
    text_color: "000000"

#    required: True
    helper_text: "This field is required"
    helper_text_mode: "on_error"

    color_mode: 'custom'
    line_color_focus: 'c06ef0'

    multiline: False
    background_color: (1, 1, 1)
    background_normal:''





<AuthenticationScreenView>:
    name: 'authentification'
    title: 'Вход'
    separator_color: (192/256,110/256,240/256,1)
    background_color:'#a910e6'
    size:root.width, root.height


    BoxLayout:
        orientation: "vertical"
        adaptive_size: True
        canvas.before:
            Color:
                rgb: (1,1,1)
            Rectangle:
                pos: self.pos
                size: self.size


        GridLayout:
            cols:1
#            canvas.before:
#                Color:
#                    rgb: (1,0,1)
#                Rectangle:
#                    pos: self.pos
#                    size: self.size
            TooltipButton:
#                canvas.before:
#                    Color:
#                        rgb: (1,0,1)
#                    Rectangle:
#                        pos: self.pos
#                        size: self.size
                size_hint: None, None
                size: (700,600)
                background_color:0,0,0,0
                pos_hint: None, None
                pos_hint: {"center_y": 0.7, "center_x": 0.9}
                Image:
                    size_hint: None, None
                    source:'img/people.jpg'
                    size: (467,600)
        GridLayout:

            cols:1
            padding:650,10,100,20
            MDRoundFlatButton:
                text: '   Настройки   '
                on_press: app.root.current = 'settings'
                background_color:'#CCFFFF'
                background_normal:''
                separator_color: (0/256,255/256,255/256,1)


        GridLayout:
            cols:1
            padding:600,40,0,0

            Label:
                text: "[color=000000]            Вход[/color]"
                markup: True
                font_size: 18
                size_hint: None, None
                height:20
                width:20
                pos_hint: {"center_x": .5}

        GridLayout:
            cols:1
            rows:1
            height:30
            padding:530,10,0,0
            MyField:
                id: login
                hint_text: 'Логин'
                max_text_length: 20
                on_text: root.set_login(self.text)
                pos_hint: {"center_x": .30}

        GridLayout:
            cols:2
            rows:1
            padding:530,10,10,50

            MyField:
                id: password
                hint_text: 'Пароль'
                password: True
                password_mask: '*'
                max_text_length: 20
                helper_text_mode: 'on_focus'
                on_focus: root.set_password(self.text)
                pos_hint: {"center_x": .30}

            TooltipButton:
                tooltip_text: 'показать пароль'
                size_hint:None,None
                size: "40sp", "40sp"
                on_press: root.hide_password()
                background_color:0,0,0,0

                Image:
                    id: image_authentication
                    source:'img/eye.png'
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y
                    size:"40sp","40sp"
        GridLayout:
            cols:1
            rows:2
            spacing:10
            padding:514,10,0,0
            MDRoundFlatButton:
                id:button_forget
                text: '[u]Забыли пароль?[/u]'
                markup: True
                on_press: app.root.current = 'forget_password'
                background_color:'#FFFFFF'
                background_normal:''
                line_color: 1,1,1,1
                pos_hint: {"center_x": .5,"center_y":.5}


        GridLayout:
            cols:1
            rows:2
            spacing:10
            padding:570,20,0,0
            MDFillRoundFlatButton:
                text: '           Войти             '
                on_press: app.root.current = 'records'
                separator_color: (0/256,255/256,255/256,1)
                pos_hint: {"center_x": .5,"center_y":.5}

        GridLayout:
            cols:1
            rows:3
            padding:615,30,0,0

            Label:
                text: "[color=66B2FF]            Хотите создать аккаунт?[/color]"
                markup: True
                font_size: 12
                size_hint: None, None
                height:10
                width:20
                pos_hint: {"center_x": .5}

        GridLayout:
            cols:1
#            spacing:10
            padding:565,0,20,220

            MDRoundFlatButton:
                text: '[u]Зарегестрироваться[/u]'
                #disabled: True if root.everything() else False
                on_press: app.root.current = 'registration'
                background_color:'#CCFFFF'
                line_color: 1,1,1,1
                background_normal:''
                separator_color: (0/256,255/256,255/256,1)


